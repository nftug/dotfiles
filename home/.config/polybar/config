[colors]
background = #222d32
background-alt = #3E434E
foreground = #b9c3c7
foreground-alt = #556066
foreground-selected = #ffffff
primary = #4db6ac
secondary = #00bcd4
alert = #ff5252

[bar/main-mainpc]
enable-ipc = true

width = 100%
height = 26
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 2
border-color = ${colors.background}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = HackgenNerdConsole:size=11.5;4
font-1 = HackgenNerdConsole:size=11.5;3
font-2 = HackgenNerdConsole:size=13.5;3
font-3 = HackgenNerdConsole:size=8;5

modules-left = dmenu i3 i3-new-ws
modules-center = 
modules-right = pulseaudio-control cpu mem fcitx date toggle-tray

tray-position = none
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

monitor = ${env:MONITOR:}

